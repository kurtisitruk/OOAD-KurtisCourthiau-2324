<Window x:Class="WpfCostumer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCostumer"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label  Content="Enter usernaame and password"/>
            <TextBox x:Name="UsernameTbx" Width="200" Margin="10"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="10"/>
            <TextBlock x:Name="ErrorMessageTbc" Foreground="Red" Margin="10"/>
            <Button x:Name="LoginBtn" Content="Login" Width="200" Margin="10"/>
        </StackPanel>

    </Grid>
</Window>
