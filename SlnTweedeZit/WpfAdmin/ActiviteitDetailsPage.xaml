<Page x:Class="WpfAdmin.ActiviteitDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Activiteit Details">

    <Grid>
        <StackPanel Margin="10">
            <Image x:Name="ActivityImage" Height="200" Width="200"/>
            <TextBlock x:Name="ActivityName" FontSize="24" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="ActivityDate" Margin="0,5"/>
            <TextBlock x:Name="ActivityDescription" TextWrapping="Wrap" Margin="0,5"/>
            <TextBlock x:Name="ActivityOrganisator" Margin="0,5"/>
            <TextBlock x:Name="ActivityMaxPersonen" Margin="0,5"/>
            <TextBlock x:Name="ActivityIngeschreven" Margin="0,5"/>
            <Button Content="Terug" Click="BackButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>