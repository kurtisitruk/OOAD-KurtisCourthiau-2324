<Window x:Class="Project.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="10"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="10"/>
            <TextBlock x:Name="ErrorMessageTextBlock" Foreground="Red" Margin="10"/>
            <Button Content="Login" Width="200" Margin="10" Click="LoginButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
